# Build Options
#   change yes to no to disable
#
BOOTMAGIC_ENABLE = no       # Enable Bootmagic Lite
MOUSEKEY_ENABLE = yes       # Mouse keys
EXTRAKEY_ENABLE = yes       # Audio control and System control
CONSOLE_ENABLE = no         # Console for debug
COMMAND_ENABLE = yes        # Commands for debug and configuration
NKRO_ENABLE = no            # Enable N-Key Rollover
APPLE_FN_ENABLE = yes       # Enable Apple Fn key functionality
BACKLIGHT_ENABLE = no       # Enable keyboard backlight functionality
AUDIO_ENABLE = no           # Audio output
RGBLIGHT_ENABLE = yes       # Enable WS2812 RGB underlight
RGBLED_NUM = 10             # The number of LEDs connected
RGBLED_SPLIT = 5            # (Optional) For split keyboards, the number of LEDs connected on each half
SPLIT_KEYBOARD = yes

DEFAULT_FOLDER = lets_split/rev2
